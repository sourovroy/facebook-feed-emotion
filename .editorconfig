# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
charset = utf-8

# 4 space indentation
[*.py]
indent_size = 4

# CSS
[*.css]
indent_size = 4
indent_style = tab

# Indentation override for all JS
[*.js]
indent_size = 2

# Matches the files .json or .yml
[*.{json,yml}]
indent_size = 2
